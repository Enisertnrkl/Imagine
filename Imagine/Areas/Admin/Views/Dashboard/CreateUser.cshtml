@model UserDtoForInsertion

<form method="post" class="p-3 bg-white border rounded">
    <div asp-validation-summary="All"></div>
  

    <div class="mb-3">
        <label class="form-label" for="productName">Name</label>
        <input id="productName" class="form-control" asp-for="Name" placeholder="Enter name of the user">
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" for="productPrice">Email</label>
        <input id="productPrice" class="form-control" asp-for="Email" placeholder="Enter email of the user">
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="mb-3">
        <label for="productPrice" class="form-label">Password</label>
        <input id="productPrice" class="form-control form-control-sm" asp-for="Password" placeholder="enter password">
    </div>
    <div class="form-check">
        <input class="form-check-input" type="checkbox" name="isCheckedAdmin" id="defaultCheck1"  asp-for="IsAdmin" >
        <label class="form-check-label" for="defaultCheck1">
            Admin Rights
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="checkbox" name="isCheckedConfirmed" id="defaultCheck1"  asp-for="IsConfirmed" >
        <label class="form-check-label" for="defaultCheck1">
            Email Confirmed
        </label>
    </div>

    <button type="submit" class="btn btn-primary w-100">Submit</button>
</form>

<style>
    .form-label {
        font-weight: 600;
        color: #5a5a5a;
    }

    .form-control {
        border: 1px solid #ced4da;
        padding: 0.375rem 0.75rem;
        font-size: 0.875rem;
        color: #495057;
        border-radius: 0.25rem;
    }

    .form-select {
        border: 1px solid #ced4da;
        padding: 0.375rem 0.75rem;
        font-size: 0.875rem;
        color: #495057;
        border-radius: 0.25rem;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        font-size: 0.875rem;
        padding: 0.5rem;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    .border {
        border: 1px solid #dee2e6;
    }

    .rounded {
        border-radius: 0.25rem;
    }

    .bg-white {
        background-color: #ffffff !important;
    }

    .p-3 {
        padding: 1rem !important;
    }

    .w-100 {
        width: 100% !important;
    }

    .text-danger {
        font-size: 0.75rem;
    }
</style>
