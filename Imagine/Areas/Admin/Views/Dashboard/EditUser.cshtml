@model User

<form method="post"  asp-action="EditUser" asp-controller="Dashboard" class="p-4 bg-white border rounded">
    <div class="mb-3">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="isChecked" id="defaultCheck1" asp-for="IsAdmin" checked="@Model.IsAdmin">
                <label class="form-check-label" for="defaultCheck1">
                    Admin Rights
                </label>
            </div>
    </div>

    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-success w-100">Submit</button>
</form>