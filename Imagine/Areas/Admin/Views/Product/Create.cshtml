@model ProductDtoForInsertion

@ViewData["path"]
<form method="post" class="p-3 bg-white border rounded" enctype="multipart/form-data">
    <div asp-validation-summary="All"></div>
    <div class="mb-3">
        <label class="form-label" for="categorySelect">Category</label>
        <select id="categorySelect" class="form-select" asp-for="CategoryId">
            @foreach (Category category in ViewBag.Categories)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
    </div> 
   

    <div class="mb-3">
        <label class="form-label" for="productName">Product Name</label>
        <input id="productName" class="form-control" asp-for="Name" placeholder="Enter product name">
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" for="productPrice">Price</label>
        <input id="productPrice" class="form-control" asp-for="Price" placeholder="Enter product price">
        <span class="text-danger" asp-validation-for="Price"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">ImageUrl</label>
        <input name="file" type="file" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary w-100">Submit</button>
</form>

<style>
    .form-label {
        font-weight: 600;
        color: #5a5a5a;
    }

    .form-control {
        border: 1px solid #ced4da;
        padding: 0.375rem 0.75rem;
        font-size: 0.875rem;
        color: #495057;
        border-radius: 0.25rem;
    }

    .form-select {
        border: 1px solid #ced4da;
        padding: 0.375rem 0.75rem;
        font-size: 0.875rem;
        color: #495057;
        border-radius: 0.25rem;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        font-size: 0.875rem;
        padding: 0.5rem;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    .border {
        border: 1px solid #dee2e6;
    }

    .rounded {
        border-radius: 0.25rem;
    }

    .bg-white {
        background-color: #ffffff !important;
    }

    .p-3 {
        padding: 1rem !important;
    }

    .w-100 {
        width: 100% !important;
    }

    .text-danger {
        font-size: 0.75rem;
    }
</style>
