@model X.PagedList.IPagedList<Product>

<div class="container-fluid bg-transparent my-4 p-3" style="position: relative;">
    <div class="row row-cols-1 row-cols-xs-2 row-cols-sm-2 row-cols-lg-4 g-3">
        @foreach (Product product in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="https://www.freepnglogos.com/uploads/notebook-png/download-laptop-notebook-png-image-png-image-pngimg-2.png" class="card-img-top" alt="Product Image">
                    <div class="card-body d-flex flex-column">
                        <div class="clearfix mb-3">
                            <span class="float-start badge rounded-pill bg-primary">@product.Name</span>
                            <span class="float-end price-hp">@product.Price.ToString("c")</span>
                        </div>
                        <h5 class="card-title">
                            @product.Description
                        </h5>
                        <div class="mt-auto text-center my-4">
                            <a target="_blank" asp-action="Details" asp-controller="Home" class="btn btn-warning" asp-route-id="@product.Id">Check Offer</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="d-flex justify-content-center my-4">
        <ul class="pagination">
            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                <a class="page-link" href="@Url.Action("ProductsByCategory", new { categoryId = ViewData["CategoryId"], page = Model.PageNumber - 1 })">Previous</a>
            </li>
            @for (int i = 1; i <= Model.PageCount; i++)
            {
                <li class="page-item @(Model.PageNumber == i ? "active" : "")">
                    <a class="page-link" href="@Url.Action("ProductsByCategory", new { categoryId = ViewData["CategoryId"], page = i })">@i</a>
                </li>
            }
            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                <a class="page-link" href="@Url.Action("ProductsByCategory", new { categoryId = ViewData["CategoryId"], page = Model.PageNumber + 1 })">Next</a>
            </li>
        </ul>
    </div>
</div>
