@model X.PagedList.IPagedList<Product>

<div class="container-fluid bg-transparent my-4 p-3" style="position: relative;">
    <div class="row row-cols-1 row-cols-xs-2 row-cols-sm-2 row-cols-lg-4 g-3">
        @foreach (Product product in Model)
        {
            <div class="col-md-3 mt-2">
                <div class="card">
                    <div class="card-img-actions">
                        <img src="~/images/@product.ImageUrl" class="card-img img-fluid" alt="">
                    </div>
                    <div class="card-body bg-light text-center">
                        <div class="mb-2">
                            <h6 class="font-weight-semibold mb-2">
                                <a asp-controller="Home" asp-action="Details" asp-route-id="@product.Id" class="text-default mb-2" data-abc="true">@product.Name</a>
                            </h6>
                            <a href="#" class="text-muted" data-abc="true">@product.Category.Name</a>
                        </div>

                        <h3 class="mb-0 font-weight-semibold">@product.Price.ToString("c")</h3>

                        <div>
                            <i class="fa fa-star star"></i>
                            <i class="fa fa-star star"></i>
                            <i class="fa fa-star star"></i>
                            <i class="fa fa-star star"></i>
                            <i class="fa fa-star star"></i>
                        </div>

                        <div class="text-muted mb-3">34 reviews</div>

                        <form asp-controller="Cart" asp-action="AddToCart" method="post">
                            <input asp-for="@product.Id" type="hidden" />
                            <button type="submit" class="btn bg-cart"><i class="fa fa-cart-plus mr-2"></i> Add to cart</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="d-flex justify-content-center my-4">
        <ul class="pagination">
            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                <a class="page-link" href="@Url.Action("ProductsByCategory", new { categoryId = ViewData["CategoryId"], page = Model.PageNumber - 1 })">Previous</a>
            </li>
            @for (int i = 1; i <= Model.PageCount; i++)
            {
                <li class="page-item @(Model.PageNumber == i ? "active" : "")">
                    <a class="page-link" href="@Url.Action("ProductsByCategory", new { categoryId = ViewData["CategoryId"], page = i })">@i</a>
                </li>
            }
            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                <a class="page-link" href="@Url.Action("ProductsByCategory", new { categoryId = ViewData["CategoryId"], page = Model.PageNumber + 1 })">Next</a>
            </li>
        </ul>
    </div>
</div>

<style>
    body {
        margin: 0;
        font-family: Roboto, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji";
        font-size: .8125rem;
        font-weight: 400;
        line-height: 1.5385;
        color: #333;
        text-align: left;
    }

    .mt-50 {
        margin-top: 50px;
    }

    .mb-50 {
        margin-bottom: 50px;
    }

    .card {
        width: 18rem; /* Set a fixed width for the card */
        height: 450px; /* Set a fixed height for the card */
        position: relative;
        display: flex;
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-color: #fff;
        background-clip: border-box;
        border: 1px solid rgba(0,0,0,.125);
        border-radius: .1875rem;
    }

    .card-img-actions {
        height: 60%; /* Set the image container height */
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .card-img {
        max-width: 100%; /* Ensure the image does not exceed the container's width */
        max-height: 100%; /* Ensure the image does not exceed the container's height */
        object-fit: contain; /* Maintain aspect ratio and fit the image within the container */
    }

    .card-body {
        flex: 1 1 auto;
        padding: 0.75rem; /* Reduced padding to give more space to the image */
        text-align: center;
        margin-top: auto; /* Ensure content is pushed to the bottom of the card */
    }

    .star {
        color: red;
    }

    .bg-cart {
        background-color: orange;
        color: #fff;
    }

        .bg-cart:hover {
            color: #fff;
        }

    .bg-buy {
        background-color: green;
        color: #fff;
        padding-right: 29px;
    }

        .bg-buy:hover {
            color: #fff;
        }

    a {
        text-decoration: none !important;
    }
</style>
