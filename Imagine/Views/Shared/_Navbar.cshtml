<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">Navbar</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item active">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">Products (@await Component.InvokeAsync("Product")) </a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Categories
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="#">@await Component.InvokeAsync("Category")</a>
         
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link disabled" href="#">Disabled</a>
                </li>
            </ul>
            <form class="d-flex" role="search" method="post" asp-action="Search" asp-controller="Product">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="search">
                <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
            <div class="d-flex">
                @if (User.Identity.IsAuthenticated)
                {
                    <a class="btn btn-outline-primary me-2" asp-controller="Cart" asp-action="Index">MyCart</a>
                    <a class="btn btn-outline-primary me-2" asp-controller="User" asp-action="Profile">@await Component.InvokeAsync("User")</a>
                    <a class="btn btn-outline-primary me-2" asp-controller="User" asp-action="Logout">Logout</a>

                    }
                    else
                    {
                    <a class="btn btn-outline-primary me-2" asp-controller="User" asp-action="Login">Login</a>
                    <a class="btn btn-outline-secondary" asp-controller="User" asp-action="Register">Register</a>
                    }

            </div>
        </div>
    </div>
</nav>