@model User

<form method="post">
    <div class="container mt-3">
        <div class="row">
            <div class="input-group flex-nowrap">
                <span class="input-group-text" id="addon-wrapping">Name</span>
                <input type="text" class="form-control" asp-for="Name">
            </div>
            <div class="input-group flex-nowrap">
                <span class="input-group-text" id="addon-wrapping">Phone Number</span>
                <input type="text" class="form-control" asp-for="PhoneNumber">
            </div>
            <div class="input-group flex-nowrap">
                <span class="input-group-text" id="addon-wrapping">UserName</span>
                <input type="text" class="form-control" asp-for="UserName">
            </div>
            <div class="input-group flex-nowrap">
                <span class="input-group-text" id="addon-wrapping">Address</span>
                <input type="text" class="form-control" asp-for="Address">
            </div>
            <div class="input-group flex-nowrap">
                <span class="input-group-text" id="addon-wrapping">Email</span>
                <input type="email" class="form-control" asp-for="Email" readonly>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>