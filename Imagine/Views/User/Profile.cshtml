@model UserDtoForUpdate

<form method="post" class="p-4 bg-white border rounded">
    <div class="container mt-3">
        <div class="row mb-3">
            <div class="input-group flex-nowrap">
                <span class="input-group-text bg-primary text-white" id="name-addon">Name</span>
                <input type="text" class="form-control" asp-for="Name" placeholder="Enter your name">
            </div>
        </div>
        <div class="row mb-3">
            <div class="input-group flex-nowrap">
                <span class="input-group-text bg-primary text-white" id="phone-addon">Phone Number</span>
                <input type="text" class="form-control" asp-for="PhoneNumber" placeholder="Enter your phone number">
            </div>
        </div>
        <div class="row mb-3">
            <div class="input-group flex-nowrap">
                <span class="input-group-text bg-primary text-white" id="username-addon">UserName</span>
                <input type="text" class="form-control" asp-for="UserName" placeholder="Enter your username">
            </div>
        </div>
        <div class="row mb-3">
            <div class="input-group flex-nowrap">
                <span class="input-group-text bg-primary text-white" id="address-addon">Address</span>
                <input type="text" class="form-control" asp-for="Address" placeholder="Enter your address">
            </div>
        </div>
        <div class="row mb-3">
            <div class="input-group flex-nowrap">
                <span class="input-group-text bg-primary text-white" id="email-addon">Email</span>
                <input type="email" class="form-control" asp-for="Email" readonly>
            </div>
        </div>
        <div class="row">
            <button type="submit" class="btn btn-primary w-100">Submit</button>
        </div>
    </div>
</form>

<style>
    .input-group-text {
        background-color: #007bff;
        color: #fff;
        border: none;
    }

    .form-control {
        border: 1px solid #ced4da;
        border-radius: 0.25rem;
        padding: 0.5rem;
        font-size: 0.875rem;
    }

        .form-control::placeholder {
            color: #6c757d;
            opacity: 1;
        }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        font-size: 1rem;
        padding: 0.5rem;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

    .border {
        border: 1px solid #dee2e6;
    }

    .rounded {
        border-radius: 0.25rem;
    }

    .bg-white {
        background-color: #ffffff !important;
    }

    .p-4 {
        padding: 1.5rem !important;
    }

    .w-100 {
        width: 100% !important;
    }
</style>
